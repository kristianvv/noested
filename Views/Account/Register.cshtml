using System;
namespace innlogging.Views.Account

@model innlogging.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<form method="post" asp-action="Register">
    <div class="form-group">
        <label for="employeeNumber">Employee Number</label>
        <input type="text" class="form-control" asp-for="EmployeeNumber" required>
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" asp-for="Email" required>
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" asp-for="Password" required>
    </div>
    <div class="form-group">
        <label for="confirmPassword">Confirm Password</label>
        <input type="password" class="form-control" asp-for="ConfirmPassword" required>
    </div>
    <div class="form-group">
        <label for="role">Role</label>
        <select class="form-control" id="role" name="Role" required>
            <option value="Service">Service</option>
            <option value="Mechanic">Mechanic</option>
            <option value="Administrator">Administrator</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
</form>

