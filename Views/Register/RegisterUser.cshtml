@using System;
@using System.Text.Encodings.Web;
@namespace Noested.Views.Login
@model RegistreringViewModel

@{
    ViewData["Title"] = "Logg inn";
    Layout = "~/Views/Login/_LoginLayout.cshtml";
}

<body class="login-side">
    <div class="col-md-20">
        <section>
            @using (Html.BeginForm("Index", "Login", FormMethod.Post))
            {
                <form method="post" asp-action="Login">
                    @Html.AntiForgeryToken()
                    <div class="col-md-20 text-center">
                        <h3 class="font-weight-normal">
                            Bruk din Nøsted konto for å logge inn. @HtmlEncoder.Default.Encode(ViewBag.Term)
                        </h3>
                    </div>
                    <hr />
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="employeeNumber" name="employeeNumber" placeholder="Ansattnummer" required>
                        <label for="employeeNumber">Ansattnummer</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="password" class="form-control" id="password" name="password" placeholder="Passord" required>
                        <label for="password">@HtmlEncoder.Default.Encode("@InputType.Password")</label>
                    </div>
                    <div class="checkbox mb-3">
                        <input class="form-check-input" type="checkbox" />
                        <a>Husk meg?</a>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Logg inn</button>
                    </div>
                    <div class="mt-5">
                        <p>
                            <a>Glemt passord? Kontakt en Administrator for tilbakestilling.</a>
                        </p>
                        <hr />
                    </div>
                </form>
            }
        </section>
        <a></a>
    </div>
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger mt-3" role="alert">
            @HtmlEncoder.Default.Encode(ViewBag.ErrorMessage)
        </div>
    }
</body>
