@model IEnumerable<Noested.Models.ServiceOrderModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderRecieved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderCompleted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SerialNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModelYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Warranty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RepairDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkHours)
            </th>
