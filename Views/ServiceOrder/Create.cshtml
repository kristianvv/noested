@model ServiceOrderModel

@section Styles {
    <link rel="stylesheet" href="~/css/CreateServiceOrder.css">
}

@{
    ViewData["Title"] = "Opprett Serviceordre";
}

<form id="create_order_form" asp-action="Create" asp-controller="ServicePersonell" method="post">
    <!-- REQUIRED FIELDS -->
    <container>
        <section class="left-section">
            <!-- Existing Customer Dropdown -->
            <div class="form-group">
                <label asp-for="CustomerID">Velg Eksisterende Kunde</label>
                <select asp-for="CustomerID" asp-items="ViewBag.ExistingCustomers" class="form-control" onchange="toggleNewCustomerSection()">
                    <option value="0">-- Opprett Ny Bruker (Nedtrekksmeny) --</option>
                </select>
            </div>
            <!-- Warranty -->
            <div class="form-group">
                <label asp-for="Warranty" title="Produktgaranti">Produktgaranti</label>
                <select asp-for="Warranty" class="form-control">
                    <option value="None">None</option>
                    <option value="Limited">Limited</option>
                    <option value="Full">Full</option>
                </select>
            </div>
            <!-- Product Name -->
            <div class="form-group">
                <label asp-for="ProductName" title="Produktnavn">Produktnavn</label>
                <input asp-for="ProductName" class="form-control" required placeholder="f.eks 'IGLAND 5002 Pento TL'" />
            </div>
            <!-- Product Type -->
            <div class="form-group">
                <label asp-for="ProductType" title="Produkttype">Produkttype</label>
                <input asp-for="ProductType" class="form-control" required placeholder="f.eks 'Vinsj'" />
            </div>
            <!-- Serial Number -->
            <div class="form-group">
                <label asp-for="SerialNumber" title="Serienummer">Serienummer</label>
                <input asp-for="SerialNumber" class="form-control" required pattern="\d+" title="Bare nummer er tillatt" />
            </div>
            <!-- Model Year -->
            <div class="form-group">
                <label asp-for="ModelYear" title="Årsmodell">Årsmodell</label>
                <input asp-for="ModelYear" class="form-control" pattern="\d{4}" placeholder="f.eks '1991'" />
            </div>

            <div class="form-group">
                <label asp-for="CustomerComment" title="Kundekommentar">Kommentar fra kunden</label>
                <input asp-for="CustomerComment" class="form-control" required placeholder="Kundens ønsker eller beskrivelse av problemet" />
            </div>
            <!-- ... Add other fields here ... -->
        </section>

        <!-- New Customer Section -->
        <section id="newCustomerSection" class="right-section">
            <!-- Customer's First Name -->
            <div class="form-group">
                <label asp-for="Customer!.FirstName">Fornavn</label>
                <input asp-for="Customer!.FirstName" class="form-control" />
            </div>
            <!-- Customer's Last Name -->
            <div class="form-group">
                <label asp-for="Customer!.LastName">Etternavn</label>
                <input asp-for="Customer!.LastName" class="form-control" />
            </div>
            <!-- Customer's Street Address -->
            <div class="form-group">
                <label asp-for="Customer!.StreetAddress">Gateadresse</label>
                <input asp-for="Customer!.StreetAddress" class="form-control" />
            </div>
            <!-- Customer's Zip Code -->
            <div class="form-group">
                <label asp-for="Customer!.ZipCode">Postnummer</label>
                <input asp-for="Customer!.ZipCode" class="form-control" />
            </div>
            <!-- Customer's City -->
            <div class="form-group">
                <label asp-for="Customer!.City">By</label>
                <input asp-for="Customer!.City" class="form-control" />
            </div>
            <!-- Customer's Email -->
            <div class="form-group">
                <label asp-for="Customer!.Email">Email</label>
                <input asp-for="Customer!.Email" class="form-control" />
            </div>
            <!-- Customer's Phone -->
            <div class="form-group">
                <label asp-for="Customer!.Phone">Telefon</label>
                <input asp-for="Customer!.Phone" class="form-control" />
            </div>
        </section>
    </container>

    <!-- Hidden value -->
    <input type="hidden" asp-for="Customer.CustomerID" value="0">

    <button type="submit" class="btn btn-primary create-button">Opprett</button>
</form>

@section Scripts {
    <script src="~/js/createServiceOrder.js"></script>
}