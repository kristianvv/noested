@model ServiceOrderModel

    @section Styles {
        <link rel="stylesheet" href="~/css/CreateServiceOrder.css">
    }

    <h1>Create New Service Order</h1>

    <form asp-action="Create" asp-controller="ServiceOrder" method="post">
        <!-- REQUIRED FIELDS -->
        <container>
            <section class="left-section">
                <!-- Existing Customer Dropdown -->
                <div class="form-group">
                    <label for="existingCustomer">Select Existing Customer</label>
                    <select id="existingCustomer" class="form-control" asp-for="Customer.CustomerID" asp-items="ViewBag.ExistingCustomers" onchange="toggleNewCustomerSection()">
                        <option value="">-- Create New Customer --</option>
                    </select>
                </div>
                <!-- Warranty -->
                <div class="form-group">
                    <label asp-for="Warranty" title="Produktgaranti type"></label>
                    <select asp-for="Warranty" class="form-control">
                        <option value="None">None</option>
                        <option value="Limited">Limited</option>
                        <option value="Full">Full</option>
                    </select>
                </div>
                <!-- Product Name -->
                <div class="form-group">
                    <label asp-for="ProductName" title="Produktnavnet"></label>
                    <input asp-for="ProductName" class="form-control" required placeholder="f.eks 'IGLAND 5002 Pento TL'" />
                </div>
                <!-- Product Type -->
                <div class="form-group">
                    <label asp-for="ProductType" title="Produkttypen"></label>
                    <input asp-for="ProductType" class="form-control" required placeholder="f.eks 'Vinsj'" />
                </div>
                <!-- Serial Number -->
                <div class="form-group">
                    <label asp-for="SerialNumber" title="Produktets Serienummer"></label>
                    <input asp-for="SerialNumber" class="form-control" required pattern="\d+" title="Bare nummer er tillatt" />
                </div>
                <!-- Model Year -->
                <div class="form-group">
                    <label asp-for="ModelYear" title="Produktets Årsmodell"></label>
                    <input asp-for="ModelYear" class="form-control" pattern="\d{4}" title="Fire-sifret årsformat" />
                    <small class="form-text text-muted">Legg inn ÅÅÅÅ format (YYYY)</small>
                </div>

                <div class="form-group">
                    <label asp-for="CustomerComment" title="Kundens Problembeskrivelse"></label>
                    <input asp-for="CustomerComment" class="form-control" required placeholder="Kundens ønsker eller beskrivelse av problemet" />
                </div>
                <!-- ... Add other fields here ... -->
            </section>

            <!-- New Customer Section -->
            <section id="newCustomerSection" class="right-section" style="display: none;">
                <!-- Customer's First Name -->
                <div class="form-group">
                    <label asp-for="Customer!.FirstName"></label>
                    <input asp-for="Customer!.FirstName" class="form-control" />
                </div>
                <!-- Customer's Last Name -->
                <div class="form-group">
                    <label asp-for="Customer!.LastName"></label>
                    <input asp-for="Customer!.LastName" class="form-control" />
                </div>
                <!-- Customer's Street Address -->
                <div class="form-group">
                    <label asp-for="Customer!.StreetAddress"></label>
                    <input asp-for="Customer!.StreetAddress" class="form-control" />
                </div>
                <!-- Customer's Zip Code -->
                <div class="form-group">
                    <label asp-for="Customer!.ZipCode"></label>
                    <input asp-for="Customer!.ZipCode" class="form-control" />
                </div>
                <!-- Customer's City -->
                <div class="form-group">
                    <label asp-for="Customer!.City"></label>
                    <input asp-for="Customer!.City" class="form-control" />
                </div>
                <!-- Customer's Email -->
                <div class="form-group">
                    <label asp-for="Customer!.Email"></label>
                    <input asp-for="Customer!.Email" class="form-control" />
                </div>
                <!-- Customer's Phone -->
                <div class="form-group">
                    <label asp-for="Customer!.Phone"></label>
                    <input asp-for="Customer!.Phone" class="form-control" />
                </div>
            </section>
        </container>

        <button type="submit" class="btn btn-primary create-button">Create</button>
    </form>

    @section Scripts {
        <script src="~/js/createServiceOrder.js"></script>
    }